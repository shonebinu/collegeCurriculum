<?php
	if ($_POST["num"]) {
	$a = $_POST["num"];
	$fact = 1;
	while ($a > 0) {
		$fact *= $a;
		$a--;
	}
	echo "Factorial of ".$_POST["num"]." is ".$fact;
	}
?>
<html>
<body>
<form action="<?php $_PHP_SELF ?>" method="POST">
Enter a number: <input type="number" name="num">
<input type="submit" value="Factorial">
</form>
</body>
</html>
